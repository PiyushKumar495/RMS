@model List<RailwayManagement.Models.Trains>

@{
    ViewBag.Title = "Admin Dashboard";
}

<h2>Train Management</h2>

<p>
    <a href="@Url.Action("Create", "Admin")" class="btn btn-success">Add New Train</a>
</p>

<table class="table table-bordered">
    <tr>
        <th>Train Name</th>
        <th>Source</th>
        <th>Destination</th>
        <th>Departure</th>
        <th>Arrival</th>
        <th>Seats (General)</th>
        <th>Seats (Ladies)</th>
        <th>Fare</th>
        <th>Actions</th>
    </tr>

    @foreach (var train in Model)
    {
        <tr>
            <td>@train.TrainName</td>
            <td>@train.SourceStation</td>
            <td>@train.DestinationStation</td>
            <td>@train.DepartureTime</td>
            <td>@train.ArrivalTime</td>
            <td>@train.GeneralSeats</td>
            <td>@train.LadiesSeats</td>
            <td>₹@train.TicketFare</td>
            <td>
                <a href="@Url.Action("Edit", "Admin", new { id = train.TrainId })" class="btn btn-warning">Edit</a>

                <!-- Secure Delete Button -->
                <form action="@Url.Action("Delete", "Admin", new { id = train.TrainId })" method="post" style="display:inline;">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this train?');">Delete</button>
                </form>
            </td>
        </tr>
    }
</table>
