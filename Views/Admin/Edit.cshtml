@model RailwayManagement.Models.Trains

@{
    ViewBag.Title = "Edit Train";
}

<h2>Edit Train</h2>

@using (Html.BeginForm("Edit", "Admin", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.TrainId) 

    <div class="form-group">
        <label>Train Name</label>
        @Html.TextBoxFor(m => m.TrainName, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Source Station</label>
        @Html.TextBoxFor(m => m.SourceStation, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Destination Station</label>
        @Html.TextBoxFor(m => m.DestinationStation, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Departure Time</label>
        @Html.TextBoxFor(m => m.DepartureTime, new { @class = "form-control", type = "datetime-local" })
    </div>

    <div class="form-group">
        <label>Arrival Time</label>
        @Html.TextBoxFor(m => m.ArrivalTime, new { @class = "form-control", type = "datetime-local" })
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
}
